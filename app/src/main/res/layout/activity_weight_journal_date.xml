<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#121212"
tools:context=".MainActivity">

<!-- Header -->
<include
    layout="@layout/layout_header"
    android:id="@+id/header"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

<!-- Change to ScrollView to prevent overflow on smaller screens -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_marginBottom="16dp"
    app:layout_constraintTop_toBottomOf="@id/header"
    app:layout_constraintBottom_toTopOf="@id/simple_bottom_bar">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Data Table Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1E1E1E"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <TableLayout
                android:id="@+id/weight_table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:stretchColumns="0,1,2">

                <!-- Headers -->
                <TableRow android:background="#2C2C2C" android:padding="4dp">
                    <TextView android:text="Date" android:textColor="#999999" android:textStyle="bold" android:padding="12dp"/>
                    <TextView android:text="Weight" android:textColor="#999999" android:textStyle="bold" android:padding="12dp"/>
                    <TextView android:text="Notes" android:textColor="#999999" android:textStyle="bold" android:padding="12dp"/>
                    <TextView android:text="Action" android:textColor="#999999" android:textStyle="bold" android:padding="12dp"/>
                </TableRow>

                <!-- Row Entry -->
                <TableRow android:padding="4dp">
                    <TextView android:text="2025-09-30" android:textColor="#FFFFFF" android:padding="12dp"/>
                    <TextView android:text="175 lbs" android:textColor="#FFFFFF" android:padding="12dp"/>
                    <TextView android:text="Ate fast food" android:textColor="#B0B0B0" android:padding="12dp"/>
                    <Button
                        android:id="@+id/delete_button"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"
                        android:textAllCaps="false"
                        android:textColor="#CF6679" />
                </TableRow>
            </TableLayout>
        </androidx.cardview.widget.CardView>

        <!-- Input Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Entry"
            android:textColor="#BB86FC"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="0,1,2">
            <TableRow>
                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    android:textColorHint="#666666"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#BB86FC"/>
                <EditText
                    android:id="@+id/editTextWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Weight"
                    android:textColorHint="#666666"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#BB86FC"/>
                <EditText
                    android:id="@+id/editTextNotes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Notes"
                    android:textColorHint="#666666"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#BB86FC"/>
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/add_entry_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Add Entry"
            android:backgroundTint="#BB86FC"
            android:textColor="#000000"
            app:cornerRadius="8dp"/>

        <!-- AI Section Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardBackgroundColor="#252525"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <EditText
                    android:id="@+id/ai_insights_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Need Advice? Ask OpenAI..."
                    android:textColor="#FFFFFF"
                    android:textColorHint="#666666"
                    android:background="@android:color/transparent" />

                <Button
                    android:id="@+id/ai_insights_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Get Advice"
                    android:textColor="#BB86FC" />

                <TextView
                    android:id="@+id/resultText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#03DAC5"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>

<!-- Bottom Nav Bar -->
<LinearLayout
    android:id="@+id/simple_bottom_bar"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal"
    android:background="#1F1F1F"
    android:gravity="center"
    app:layout_constraintBottom_toBottomOf="parent">

    <Button
        android:id="@+id/weight_page_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="Journal"
        android:textColor="#BB86FC" />

    <Button
        android:id="@+id/settings_button"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:text="Settings"
        android:textColor="#999999" />
</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>